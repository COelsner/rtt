<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="rtt.ui.views.category.standard"
            name="%category.normal.name">
      </category>
      <category
            id="rtt.ui.views.category.experimental"
            name="%category.experimental.name">
      </category>
      <view
            category="rtt.ui.views.category.standard"
            class="rtt.ui.views.ProjectView"
            icon="icons/sample.gif"
            id="rtt.ui.views.ProjectView"
            name="%view.projects.name"
            restorable="true">
      </view>
      <view
            category="rtt.ui.views.category.standard"
            class="rtt.ui.views.LogView"
            icon="icons/sample.gif"
            id="rtt.ui.views.LogView"
            name="%view.logs.name"
            restorable="true">
      </view>
      <view
            category="rtt.ui.views.category.standard"
            class="rtt.ui.views.VersionView"
            icon="icons/sample.gif"
            id="rtt.ui.views.VersionView"
            name="%view.versions.name"
            restorable="true">
      </view>
      <view
            category="rtt.ui.views.category.standard"
            class="rtt.ui.views.TestView"
            icon="icons/sample.gif"
            id="rtt.ui.views.TestView"
            name="%view.testing.name"
            restorable="true">
      </view>
     
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="rtt.ui.commands.archive.start"
            name="%commands.archive.start.name">
      </command>
      <command
            id="rtt.ui.commands.archive.end"
            name="%commands.archive.end.name">
      </command>
      <command
            id="rtt.ui.commands.config.add"
            name="%commands.config.add.name">
      </command>
      <command
            id="rtt.ui.commands.config.edit"
            name="%commands.config.edit.name">
      </command>
      <command
            id="rtt.ui.commands.config.setActive"
            name="%commands.config.setActive.name">
      </command>
      <command
            id="rtt.ui.commands.tests.generate"
            name="%commands.tests.generate.name">
      </command>
      <command
            id="rtt.ui.commands.tests.run"
            name="%commands.tests.run.name">
      </command>
      <command
            id="rtt.ui.commands.testsuite.add"
            name="%commands.testsuite.add.name">
      </command>
      <command
            id="rtt.ui.commands.testsuite.remove"
            name="%commands.testsuite.remove.name">
      </command>
      <command
            id="rtt.ui.commands.tests.junitexport"
            name="%commands.tests.junitexport.name">
      </command>
      <command
            id="rtt.ui.commands.testcase.add"
            name="%commands.testcase.add.name">
      </command>
      <command
            id="rtt.ui.commands.testcase.remove"
            name="%commands.testcase.remove.name">
      </command>
      <command
            id="rtt.ui.commands.comment.add"
            name="%commands.comment.add.name">
      </command>
      <command
            id="rtt.ui.commands.comment.edit"
            name="%commands.comment.edit.name">
      </command>
      <command
            id="rtt.ui.commands.comment.remove"
            name="%commands.comment.remove.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <menu
               label="%menu.label">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                     </adapt>
                  </iterate>
                  <count
                        value="1">
                  </count>
               </with>
            </visibleWhen>
            <command
                  commandId="rtt.ui.commands.archive.start"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="false"
                           operator="or">
                        <adapt
                              type="org.eclipse.core.resources.IProject">
                           <not>
                              <test
                                    property="org.eclipse.core.resources.projectNature"
                                    value="rtt.ui.projectnature">
                              </test>
                           </not>
                        </adapt>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="rtt.ui.commands.archive.end"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="false"
                           operator="or">
                        <adapt
                              type="org.eclipse.core.resources.IProject">
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="rtt.ui.projectnature">
                           </test>
                        </adapt>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:rtt.ui.views.LogView">
         <command
               commandId="rtt.ui.commands.comment.add"
               id="comment.add"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="rtt.ui.definitions.selection.testresult">
               </reference>
            </visibleWhen>
         </command>
         <command
               commandId="rtt.ui.commands.comment.edit"
               id="comment.edit"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="rtt.ui.definitions.selection.comment">
               </reference>
            </visibleWhen>
         </command>
         <command
               commandId="rtt.ui.commands.comment.remove"
               id="comment.remove"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="rtt.ui.definitions.selection.comment">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:rtt.ui.views.ProjectView">
         <command
               commandId="rtt.ui.commands.config.add"
               id="config.add"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="rtt.ui.definitions.selection.directory.config">
               </reference>
            </visibleWhen>
         </command>
         <command
               commandId="rtt.ui.commands.config.edit"
               id="config.edit"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <or>
                  <reference
                        definitionId="rtt.ui.definitions.selection.config">
                  </reference>
                  <reference
                        definitionId="rtt.ui.definitions.configParent">
                  </reference>
               </or>
            </visibleWhen>
         </command>
         <command
               commandId="rtt.ui.commands.config.setActive"
               id="config.setActive"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <or>
                  <reference
                        definitionId="rtt.ui.definitions.selection.config">
                  </reference>
                  <reference
                        definitionId="rtt.ui.definitions.configParent">
                  </reference>
               </or>
            </visibleWhen>
         </command>
         <separator
               name="rtt.ui.testsuiteview.seperator1"
               visible="true">
         </separator>
         <command
               commandId="rtt.ui.commands.testsuite.add"
               id="testsuite.add"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="rtt.ui.definitions.selection.directory.testsuite">
               </reference>
            </visibleWhen>
         </command>
         <command
               commandId="rtt.ui.commands.testsuite.remove"
               id="testsuite.remove"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="rtt.ui.definitions.selection.testsuite">
               </reference>
            </visibleWhen>
         </command>
         <separator
               name="rtt.ui.testsuiteview.seperator2"
               visible="true">
         </separator>
         <command
               commandId="rtt.ui.commands.testcase.add"
               id="testcase.add"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="rtt.ui.definitions.selection.testsuite">
               </reference>
            </visibleWhen>
         </command>
         <command
               commandId="rtt.ui.commands.testcase.remove"
               id="testcase.remove"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="rtt.ui.definitions.selection.testcase">
               </reference>
            </visibleWhen>
         </command>
         <separator
               name="rtt.ui.testsuiteview.seperator3"
               visible="true">
         </separator>
         <command
               commandId="rtt.ui.commands.tests.generate"
               id="tests.generate"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <reference
                        definitionId="rtt.ui.definitions.selection.testsuite">
                  </reference>
               </and>
            </visibleWhen>
         </command>
         <command
               commandId="rtt.ui.commands.tests.run"
               id="tests.run"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="rtt.ui.definitions.selection.testsuite">
               </reference>
            </visibleWhen>
         </command>
         <command
               commandId="rtt.ui.commands.tests.junitexport"
               id="tests.junitexport"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="rtt.ui.definitions.selection.testsuite">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="rtt.ui.commands.config.add">
         <class
               class="rtt.ui.handlers.config.ConfigAddHandler"></class>
      </handler>
      <handler
            commandId="rtt.ui.commands.config.edit">
         <class
               class="rtt.ui.handlers.config.ConfigEditHandler">
         </class>
      </handler>
      <handler
            commandId="rtt.ui.commands.config.setActive">
         <class
               class="rtt.ui.handlers.config.ConfigSetActiveHandler">
         </class>
      </handler>
      <handler
            commandId="rtt.ui.commands.tests.generate">
         <class
               class="rtt.ui.handlers.tests.GenerateTestsHandler">
         </class>
      </handler>
      <handler
            commandId="rtt.ui.commands.tests.run">
         <class
               class="rtt.ui.handlers.tests.RunTestsHandler">
         </class>
      </handler>
      <handler
            commandId="rtt.ui.commands.tests.junitexport">
         <class
               class="rtt.ui.handlers.tests.JUnitExportHandler">
         </class>
      </handler>
      <handler
            commandId="rtt.ui.commands.testsuite.add">
         <class
               class="rtt.ui.handlers.testsuite.TSuiteAddHandler"></class>
      </handler>
      <handler
            commandId="rtt.ui.commands.testsuite.remove">
         <class
               class="rtt.ui.handlers.testsuite.TSuiteRemoveHandler">
         </class>
      </handler>
      <handler
            commandId="rtt.ui.commands.testcase.add">
         <class
               class="rtt.ui.handlers.testcase.TCaseAddHandler">
         </class>
      </handler>
      <handler
            commandId="rtt.ui.commands.testcase.remove">
         <class
               class="rtt.ui.handlers.testcase.TCaseRemoveHandler">
         </class>
      </handler>
      <handler
            commandId="rtt.ui.commands.comment.add">
         <class
               class="rtt.ui.handlers.comment.CommentAddHandler">
         </class>
      </handler>
      <handler
            commandId="rtt.ui.commands.comment.edit">
         <class
               class="rtt.ui.handlers.comment.CommentEditHandler">
         </class>
      </handler>
      <handler
            commandId="rtt.ui.commands.comment.remove">
         <class
               class="rtt.ui.handlers.comment.CommentRemoveHandler">
         </class>
      </handler>
      <handler
            commandId="rtt.ui.commands.archive.start">
         <class
               class="rtt.ui.handlers.OpenArchiveHandler">
         </class>
      </handler>
      <handler
            commandId="rtt.ui.commands.archive.end">
         <class
               class="rtt.ui.handlers.CloseArchiveHandler">
         </class>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="rtt.ui.perspectives.ProjectPerspectiveFactory"
            icon="icons/sample.gif"
            id="rtt.ui.perspective.projectPerspective"
            name="%perspective.name">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="rtt.ui.definitions.selection.directory.testsuite">
         <with
               variable="activeMenuSelection">
            <iterate
                  ifEmpty="false"
                  operator="and">
               <instanceof
                     value="rtt.ui.content.main.TestsuiteDirectory">
               </instanceof>
            </iterate>
            <count
                  value="1">
            </count>
         </with>
      </definition>
      <definition
            id="rtt.ui.definitions.selection.directory.config">
         <with
               variable="activeMenuSelection">
            <iterate
                  ifEmpty="false"
                  operator="and">
               <instanceof
                     value="rtt.ui.content.configuration.ConfigurationDirectory">
               </instanceof>
            </iterate>
            <count
                  value="1">
            </count>
         </with>
      </definition>
      <definition
            id="rtt.ui.definitions.selection.testsuite">
         <with
               variable="activeMenuSelection">
            <iterate
                  ifEmpty="false"
                  operator="and">
               <instanceof
                     value="rtt.ui.content.testsuite.TestsuiteContent">
               </instanceof>
            </iterate>
            <count
                  value="1">
            </count>
         </with>
      </definition>
      <definition
            id="rtt.ui.definitions.selection.testcase">
         <with
               variable="activeMenuSelection">
            <iterate
                  ifEmpty="false"
                  operator="and">
               <instanceof
                     value="rtt.ui.content.testsuite.TestcaseContent">
               </instanceof>
            </iterate>
            <count
                  value="1">
            </count>
         </with>
      </definition>
      <definition
            id="rtt.ui.definitions.selection.config">
         <with
               variable="activeMenuSelection">
            <iterate
                  ifEmpty="false"
                  operator="and">
               <instanceof
                     value="rtt.ui.content.configuration.ConfigurationContent">
               </instanceof>
            </iterate>
            <count
                  value="1">
            </count>
         </with>
      </definition>
      <definition
            id="rtt.ui.definitions.selection.testresult">
         <with
               variable="activeMenuSelection">
            <iterate
                  ifEmpty="false"
                  operator="and">
               <instanceof
                     value="rtt.ui.content.logging.TestResultContent">
               </instanceof>
            </iterate>
            <count
                  value="1">
            </count>
         </with>
      </definition>
      <definition
            id="rtt.ui.definitions.selection.comment">
         <with
               variable="activeMenuSelection">
            <iterate
                  ifEmpty="false"
                  operator="and">
               <instanceof
                     value="rtt.ui.content.logging.CommentContent">
               </instanceof>
            </iterate>
            <count
                  value="1">
            </count>
         </with>
      </definition>
      <definition
            id="rtt.ui.definitions.configParent">
         <with
               variable="activeMenuSelection">
            <iterate
                  ifEmpty="false"
                  operator="and">
               <test
                     args="configuration"
                     property="rtt.ui.content.hasParent"
                     value="configuration">
               </test>
            </iterate>
            <count
                  value="1">
            </count>
         </with>
      </definition>
      <definition
            id="rtt.ui.definitions.hasChildren">
         <with
               variable="activeMenuSelection">
            <iterate
                  ifEmpty="false"
                  operator="and">
               <test
                     args="childs"
                     property="rtt.ui.content.hasChilds"
                     value="childs">
               </test>
            </iterate>
            <count
                  value="1">
            </count>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="rtt.ui.editors.ReferenceEditor"
            default="false"
            icon="icons/sample.gif"
            id="rtt.ui.editors.formeditor"
            name="%editor.name">
      </editor>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="rtt.ui.propertyTester.ContentTypePropertyTester"
            id="rtt.ui.ContentPropertyTester"
            namespace="rtt.ui.content"
            properties="hasType,hasParent,hasChilds"
            type="rtt.ui.content.IContent">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.emf.ecore.extension_parser">
      <parser
            class="regression.test.util.TestResourceFactoryImpl"
            type="test">
      </parser>
   </extension>
   <extension
         point="org.eclipse.emf.ecore.generated_package">
      <package
            class="regression.test.TestPackage"
            uri="regression.test.tool">
      </package>
   </extension>
   <extension
         point="org.eclipse.emf.edit.itemProviderAdapterFactories">
      <factory
            class="regression.test.provider.TestItemProviderAdapterFactory"
            uri="regression.test.tool"
             
             supportedTypes="org.eclipse.emf.edit.provider.IEditingDomainItemProvider
               org.eclipse.emf.edit.provider.IStructuredItemContentProvider
               org.eclipse.emf.edit.provider.ITreeItemContentProvider
               org.eclipse.emf.edit.provider.IItemLabelProvider
               org.eclipse.emf.edit.provider.IItemPropertySource">
      </factory>
   </extension>
   <extension
         id="projectnature"
         name="%extension.name"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="rtt.ui.core.RttNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
